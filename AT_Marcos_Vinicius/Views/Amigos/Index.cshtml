@model IEnumerable<Gerenciador.Domain.Amigos>

@{
    ViewBag.Title = "Gerenciador de Aniversário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

<h1>Gerenciador de Aniversário</h1>

<p>
    @Html.ActionLink("Adicionar novo amigo", "Create") <br />
    @Html.ActionLink("Procurar amigo", "Search")
</p>
<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aniversario)
        </th>
        <th></th>
    </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @item.Aniversario.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<h1>Aniversariante(s) de hoje</h1>
<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aniversario)
        </th>
        <th></th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {

        if (item.Aniversario.Day == DateTime.Now.Day && item.Aniversario.Month == DateTime.Now.Month)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aniversario)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
</div>
